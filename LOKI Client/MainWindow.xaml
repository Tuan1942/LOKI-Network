<Window x:Class="LOKI_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LOKI_Client"
        mc:Ignorable="d"
        xmlns:vc="clr-namespace:LOKI_Client.UIs.Views.Converters"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
       Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <vc:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Grid>
            <!--<Grid Visibility="{Binding LoginPageVisible, Converter={StaticResource BooleanToVisibilityConverter}}">-->
            <Grid Opacity="0.3" Background="Black"/>
            <Frame Source="../UIs/Views/LoginPage.xaml"/>
        </Grid>
        <Grid Visibility="Visible"></Grid>
    </Grid>
</Window>
